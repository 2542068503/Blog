w: var(--about-shadow);\n  transition: transform .2s ease, box-shadow .2s ease;\n}\n.about-card:hover { transform: translateY(-2px); box-shadow: var(--about-shadow-hover); }\n.about-card h3 { margin: 0 0 10px; font-size: 18px; color: var(--about-text); }\n.about-card p { margin: 0 0 10px; color: var(--about-sub); }\n\n/* 2-col / 3-col responsive */\n@media (min-width: 720px) {\n  .span-6 { grid-column: span 6; }\n  .span-4 { grid-column: span 4; }\n}\n@media (min-width: 980px) {\n  .span-6 { grid-column: span 6; }\n  .span-4 { grid-column: span 4; }\n}\n\n/* profile chips */\n.profiles { display: flex; flex-wrap: wrap; gap: 10px; }\n.profile-chip {\n  display: inline-flex; align-items: center; gap: 8px;\n  padding: 10px 12px; border-radius: 12px;\n  border: 1px dashed var(--about-border);\n  text-decoration: none; color: var(--about-text);\n  background: rgba(127,127,127,.04);\n}\n.profile-chip:hover { border-style: solid; }\n.profile-chip svg { width: 20px; height: 20px; display: block; }\n\n/* tags */\n.tags { display:flex; flex-wrap:wrap; gap:8px; margin-top:8px; }\n.tag { padding:6px 10px; border-radius: 999px; border:1px solid var(--about-border); font-size: 13px; color: var(--about-sub); }\n\n/* timeline */\n.timeline { margin: 0; padding-left: 12px; list-style: none; }\n.timeline li { position: relative; padding-left: 16px; margin: 10px 0; color: var(--about-sub); }\n.timeline li::before { content: \"\"; position: absolute; left: -6px; top: 6px; width: 8px; height: 8px; border-radius: 50%; background: linear-gradient(135deg,#60a5fa,#34d399); }\n\n/* contact */\n.contact { display:flex; flex-wrap:wrap; gap:10px; margin-top:6px; }\n.button {\n  display:inline-flex; align-items:center; justify-content:center; gap:8px;\n  padding:10px 14px; border-radius:12px; border:1px solid var(--about-border);\n  background: rgba(127,127,127,.04); text-decoration:none; color: var(--about-text);\n}\n.button:hover { transform: translateY(-1px); box-shadow: var(--about-shadow-hover); }\n.button svg { width: 18px; height: 18px; }\n</style>\n\n<div class=\"about-wrap\">\n  <section class=\"about-hero\">\n    <div class=\"avatar\">ZSY</div>\n    <div class=\"intro\">\n      <h1>Zhang Shiyan</h1>\n      <p>喜欢算法与工程落地的全栈折腾爱好者｜C++/Node.js｜Hexo & Electron｜PPO 玩 Generals.io AI</p>\n    </div>\n  </section>\n\n  <section class=\"about-grid\">\n    <!-- Profiles -->\n    <div class=\"about-card span-6\">\n      <h3>在别处找到我</h3>\n      <p>常更：代码仓库、OJ、视频号。</p>\n      <div class=\"profiles\">\n        <a class=\"profile-chip\" href=\"https://space.bilibili.com/1135951239\" target=\"_blank\" rel=\"noopener\">\n          <!-- Bilibili SVG -->\n          <svg viewBox=\"0 0 1024 1024\" xmlns=\"http://www.w3.org/2000/svg\" aria-hidden=\"true\"><path d=\"M256 192l96 96h320l96-96\" fill=\"none\" stroke=\"currentColor\" stroke-width=\"72\" stroke-linecap=\"round\"/><rect x=\"128\" y=\"288\" width=\"768\" height=\"544\" rx=\"64\" ry=\"64\" fill=\"none\" stroke=\"currentColor\" stroke-width=\"72\"/><path d=\"M320 544h128M576 544h128\" stroke=\"currentColor\" stroke-width=\"72\" stroke-linecap=\"round\"/></svg>\n          <span>@shiyanzhang</span>\n        </a>\n        <a class=\"profile-chip\" href=\"https://github.com/2542068503\" target=\"_blank\" rel=\"noopener\">\n          <!-- GitHub SVG -->\n          <svg viewBox=\"0 0 16 16\" xmlns=\"http://www.w3.org/2000/svg\" aria-hidden=\"true\"><path fill=\"currentColor\" fill-rule=\"evenodd\" d=\"M8 0C3.58 0 0 3.58 0 8a8 8 0 0 0 5.47 7.59c.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.01.08-2.11 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.91.08 2.11.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8